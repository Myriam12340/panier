<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!
        {% endblock %}
    </title>
    <link rel="stylesheet" href="{{asset('theme/css/bootstrap.min.css')}}">
        <link rel="stylesheet" href="{{asset('theme/css/bootstrap-theme.min.css')}}">
    <link rel="stylesheet" href="{{asset('theme/css/fontAwesome.css')}}">
        <link rel="stylesheet" href="{{asset('theme/css/hero-slider.css')}}">
    <link rel="stylesheet" href="{{asset('theme/css/owl-carousel.css')}}">
        <link rel="stylesheet" href="{{asset('theme/css/style.css')}}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% block stylesheets %} <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">


    {% endblock %}
    {% block javascripts %}
        <script src="{{asset('theme/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js')}}"></script>
        <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>


    {% endblock %}
</head>
<body>


<div class="wrap">
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <button id="primary-nav-button" type="button">Menu</button>
                    <a href="index.html"><div class="logo">
                            <img src="{{asset('theme/img/logo.png')}}" alt="Venue Logo">
                        </div></a>
                    <nav id="primary-nav" class="dropdown cf" style="size: B5">
                        <ul class="dropdown menu">
                            <li ><a href="{{ path('home')}}">Home</a></li>

                            <li><a href="{{ path('produit_index') }}">Produit</a></li>





                            <li class='active'>
                                <a>categorie</a>
                                <ul class="sub-menu">
                                    <li><a href="{{ path('produit_homme') }}">Homme</a></li>
                                    <li class='active'><a href="{{ path('produit_femme') }}">Femme</a></li>

                                </ul>
                            </li>
                            {% if app.user %}
                            <li><a href="{{ path('cart_index') }}" title="panier"><i class="fas fa-cart-arrow-down btn-lg  "></i></a></li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="event.preventDefault(); document.getElementById('js-logout-form').submit();">Logout</a>
                                </li>

                                <form id="js-logout-form" action="{{ path('app_logout') }}" method="POST" style="display: none;">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                </form>
                            {% else %}
                            <li><a href="{{ path('app_login') }}" >Login</a></li>
                                <li><a href="{{ path('app_register') }}">Register</a></li>
                            {% endif %}
                        </ul>

                    </nav><!-- / #primary-nav -->
                </div>
            </div>
        </div>
    </header>
</div>











<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
<script>window.jQuery || document.write('<script src="{{asset('theme/js/vendor/jquery-1.11.2.min.js')}}"><\/script>')</script>

<script src="{{asset('theme/js/vendor/bootstrap.min.js')}}"></script>

<script src="{{asset('theme/js/datepicker.js')}}"></script>
<script src="{{asset('theme/js/plugins.js')}}"></script>
<script src="{{asset('theme/js/main.js')}}"></script>

    {% block body %}{% endblock %}


</body>
</html>
