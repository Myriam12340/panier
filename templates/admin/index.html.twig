{% extends 'admin.html.twig' %}

{% block title %}produit index{% endblock %}

{% block body %}






    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">






                    <br>

                        <div class="col-lg-offset-11">
                            <button type="button" class="btn btn-primary btn-success btn-lg color-block mb-2 mx-12 z-depth-1 btn-rounded">
                                <a href="{{ path('app_produit_new') }}" ><i class="text-white fa fa-cart-plus ">  produit</i> </a></button>
                        </div>


                    <thead>
                    <tr>
                        <th>nom </th>
                        <th>prix</th>
                        <th> image</th>
                        <th> description </th>
                        <th> Quantites </th>


                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}
                        <tr>

                        <td>{{ produit.nom }}</td>

                        <td>{{ produit.prix }}</td>
                        <td>
                            <img src="{{ (produit.imageName ? vich_uploader_asset(produit) : asset('public/uploads/produit/placeholder.jpg'))  }}" alt="{{ produit.nom }}" class="w-100" height="50" />

                        </td>
                        <td>{{ produit.description }}</td>
                        <td>{{ produit.qte }}</td>


                        <td>
                            <div class="row mt">

                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <div class="col-lg-3">
                                            <button type="button"class="btn btn-theme02">

                                                <a href="{{ path('admin_show2', {'id': produit.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle ">show</i> </a></button>

                                        </div>
                                    </div>

                                    <div class="form-group">

                                            <div class="col-lg-3">

                                                <button type="button"class="btn btn-info">

                                                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"title="Modifier" ><i class="text-white fa fa-pencil ">Edit</i></a></button>


                                            </div>

                                    </div>

                                </form>
                            </div>
                        </td>


                    {% else %}
                        <tr>
                            <td colspan="9">Produit n'existe pas</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}