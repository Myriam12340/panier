{% extends 'admin.html.twig' %}

{% block title %}Produit Show{% endblock %}

{% block body %}
<center>
    <div class="wrapper site-min-height">
        <!-- page start-->
        <div class="chat-room mt">
            <div class="col-lg-12">
                <aside class="mid-side">
                    <div class="chat-room-head">
                        <h3>Produit</h3>

                        <div class="col-md-4 centered">
                            <div class="profile-pic">
                                <p>
                                    <img src="{{ (produit.imageName ? vich_uploader_asset(produit) : asset('public/uploads/produit/placeholder.jpg'))  }}" alt="{{ produit.nom }}" class="w-100" height="50" />

                                </p>


                            </div>
                        </div>

                    </div>

                    <section class="content invoice">

                        <div class="group-rom">
                            <div class="first-part odd">Nom</div>
                            <div class="second-part">{{ produit.nom}}</div>

                        </div>

                        <div class="group-rom">
                            <div class="first-part odd">Description</div>
                            <div class="second-part">{{ produit.description }}</div>

                        </div>
                        <div class="group-rom">
                            <div class="first-part odd">Type</div>
                            <div class="second-part">{{produit.type}}</div>

                        </div>
                        <div class="group-rom">
                            <div class="first-part odd">prix</div>

                            <div class="second-part">{{ produit.prix}}</div>

                        </div>
                        <div class="group-rom">
                            <div class="first-part odd">Quantite</div>
                            {% if produit.qte == 0 %}
                            <div class="second-part text-danger  "><h2>{{ produit.qte}} repture de stock</h2></div>
                            {% else %}
                            <div class="second-part">{{ produit.qte}}</div>
                            {% endif %}
                        </div>



                    </section>
                    <div class="group-rom ">
                        <div class="row justify-content-center">
                            <div class="col-lg-3">
                                <br>
                                {{ include('admin/_delete_form.html.twig') }}


                            </div>


                            <div class="col-lg-3">
                                <br>
                                <button type="button" class="btn btn-dark btn-primary  btn-lg mb-1 mx-auto z-depth-5 btn-rounded ">
                                    <a href="{{ path('liste_produit') }}"class= text-white title="retour a la liste"><i class="fa fa-reply"></i> Retour a la liste </a></button>
                            </div>

                        </div>
                        <br>

                    </div>

                </aside>

            </div>
        </div>
    </div>


</center>
{% endblock %}

