{% extends 'admin.html.twig' %}

{% block title %}users index{% endblock %}

{% block body %}






    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">






                    <br>



                    <thead>
                    <tr>
                        <th>First_name </th>
                        <th>last_name</th>
                        <th> Email</th>
<th>Telephone</th>

                        <th><i class="fa fa-user-circle"></i> Consulter Profil </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% if user.Roles[0]  !='ROLE_ADMIN' %}
                        <tr>

                        <td>{{ user.FirstName }}</td>


                        <td>{{ user.lastname }}</td>

                        <td>{{ user.email }}</td>

                            <td>{{ user.tel }}</td>
                            <td>  <div class="col-lg-3">
                                    <button type="button"class="btn btn-theme02">

                                        <a href="{{ path('partie_admin/users/', {'id': user.id}) }}" title="Affichier" ><i class="text-white fa fa-info-circle "></i><span class="text-white"> show</span></a></button>

                                </div>
                            </td>
                        </tr>




{% endif %}
                    {% else %}
                        <tr>
                            <td colspan="9"> pas de client</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}