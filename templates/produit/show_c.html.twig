{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}
 {% block javascripts %}
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

 {% endblock %}
{% block body %}
    {% for type, messages in app.flashes(['success', 'error', 'info']) %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <section class="banner banner-secondary" id="top" style="background-image: url({{asset('theme/img/banner-image-1-1920x300.jpg')}});">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="banner-caption">
                        <div class="line-dec"></div>
                        <h2>Products</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
<section class="featured-places">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12">



                <img src="{{ (produit.imageName ? vich_uploader_asset(produit) : asset('public/uploads/produit/placeholder.jpg'))  }}" alt="{{ produit.nom }}" class="w-100" height="50" />

                <br>


            </div>
    <div class="col-md-6 col-xs-12">

            <h2><strong class="text-primary">{{ produit.prix }} DT</strong></h2>

            <br>

            <p class="lead">
                {{ produit.type}}
            </p>

            <br>


        {% if is_granted('ROLE_USER') %}
            <div class="blue-button ">
                <a href="{{path("cart_add", {id: produit.id})}}"><i class="fas fa-shopping-basket"></i>  Add to Cart</a>
            </div>
{% endif %}
        <br>
        <br>
        <div class="blue-button">
            <a href="{{ path('produit_index') }}">continue shopping</a>
        </div>

    </div>
    </div>
    </div>
    </section>










{% endblock %}
